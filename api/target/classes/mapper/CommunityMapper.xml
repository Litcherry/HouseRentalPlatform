<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kmbeast.mapper.CommunityMapper">

    <select id="list" resultMap="BaseResultMap">
        SELECT c.*,
        a1.id AS top_area_id,
        a1.name AS top_area_name,
        a2.name AS city_area_name
        FROM community c
        LEFT JOIN area a2 ON a2.id = c.area_id
        LEFT JOIN area a1 ON a1.id = a2.parent_id
        <where>
            <if test="id != null">
                AND c.id = #{id}
            </if>
            <if test="areaId != null">
                AND c.area_id = #{areaId}
            </if>
            <if test="name != null and name != ''">
                AND c.name LIKE concat('%',#{name},'%')
            </if>
        </where>
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="listCount" resultType="integer">

        SELECT COUNT(*)
        FROM community c
        <where>
            <if test="areaId != null">
                AND c.area_id = #{areaId}
            </if>
            <if test="name != null and name != ''">
                AND c.name LIKE concat('%',#{name},'%')
            </if>
        </where>

    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kmbeast.pojo.vo.CommunityVO">
        <id column="id" property="id"/>
        <result column="area_id" property="areaId"/>
        <result column="top_area_id" property="topAreaId"/>
        <result column="top_area_name" property="topAreaName"/>
        <result column="city_area_name" property="cityAreaName"/>
        <result column="name" property="name"/>
        <result column="cover" property="cover"/>
        <result column="covers" property="covers"/>
        <result column="detail" property="detail"/>
        <result column="create_time" property="createTime"/>

    </resultMap>

</mapper>
