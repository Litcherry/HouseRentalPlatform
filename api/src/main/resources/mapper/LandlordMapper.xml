<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kmbeast.mapper.LandlordMapper">

    <select id="list" resultMap="BaseResultMap">
        SELECT l.*,u.avatar,u.username
        FROM landlord l
        LEFT JOIN user u ON u.id = l.user_id
        <where>
            <if test="userId != null">
                AND l.user_id = #{userId}
            </if>
            <if test="isAudit != null">
                AND l.is_audit = #{isAudit}
            </if>
            <if test="idcard != null">
                AND l.idcard LIKE concat('%',#{idcard},'%')
            </if>
        </where>
        ORDER BY l.is_audit ASC, l.create_time DESC
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="listCount" resultType="integer">

        SELECT COUNT(*)
        FROM landlord l
        <where>
            <if test="userId != null">
                AND l.user_id = #{userId}
            </if>
            <if test="isAudit != null">
                AND l.is_audit = #{isAudit}
            </if>
            <if test="idcard != null">
                AND l.idcard LIKE concat('%',#{idcard},'%')
            </if>
        </where>

    </select>

    
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kmbeast.pojo.vo.LandlordVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="avatar" property="avatar"/>
        <result column="username" property="username"/>
        <result column="idcard_front" property="idcardFront"/>
        <result column="idcard_opposite" property="idcardOpposite"/>
        <result column="idcard" property="idcard"/>
        <result column="is_audit" property="isAudit"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 图表数据映射结果 -->
    <resultMap id="ChartResultMap" type="com.kmbeast.pojo.vo.ChartVO">
        <result column="name" property="name"/>
        <result column="count" property="count"/>
    </resultMap>

</mapper>
